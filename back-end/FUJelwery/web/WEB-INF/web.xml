<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AdminLoginController</servlet-name>
        <servlet-class>com.khac.swp.fuj.controller.AdminLoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerLoginController</servlet-name>
        <servlet-class>com.khac.swp.fuj.controller.ManagerLoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerController</servlet-name>
        <servlet-class>com.khac.swp.fuj.controller.CustomerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.khac.swp.fuj.controller.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SalesController</servlet-name>
        <servlet-class>com.khac.swp.fuj.controller.SalesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeliveryStaffController</servlet-name>
        <servlet-class>com.khac.swp.fuj.controller.DeliveryStaffController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerController</servlet-name>
        <servlet-class>com.khac.swp.fuj.controller.ManagerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostController</servlet-name>
        <servlet-class>com.khac.swp.fuj.controller.PostController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginController</servlet-name>
        <url-pattern>/adminlogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerLoginController</servlet-name>
        <url-pattern>/managerlogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerController</servlet-name>
        <url-pattern>/CustomerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/AdminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SalesController</servlet-name>
        <url-pattern>/SalesController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeliveryStaffController</servlet-name>
        <url-pattern>/DeliveryStaffController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerController</servlet-name>
        <url-pattern>/ManagerController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostController</servlet-name>
        <url-pattern>/PostController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>adminlogin.jsp</welcome-file>
    </welcome-file-list>
</web-app>
